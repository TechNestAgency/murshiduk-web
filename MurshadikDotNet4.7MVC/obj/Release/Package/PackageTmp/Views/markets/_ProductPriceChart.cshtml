@section scripts{
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
    <script src="~/assets/libs/chart.js/Chart.bundle.min.js"></script>
    <script src="~/assets/js/pages/dashboard.js"></script>
}
<script>
    $(document).ready(function () {

        murshadik.initDashboardPageCharts();

        murshadik.lineChart(
            'MarketPriceDaily',
            '#6cb2eb',
            @Html.Raw(Json.Encode(ViewBag.marketProductDataForChart.Keys)),
            @Html.Raw(Json.Encode(ViewBag.marketProductDataForChart.Values)),
            "Market Price",
            false,
            'end'
        );
    });

</script>
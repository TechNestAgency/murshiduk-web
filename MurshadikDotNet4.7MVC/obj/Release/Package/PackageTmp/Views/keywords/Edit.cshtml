@model MurshadikCP.Models.DB.keyword

@{
    ViewBag.Title = "الكلمات الدالة";
    ViewBag.pTitle = "تعديل الكلمات الدالة ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                @using (Html.BeginForm("Edit", "keywords", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)

                        <div class="form-group row">
                            @Html.LabelFor(model => model.keyword1, "اسم الكلمات الرئيسية", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.keyword1, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.keyword1, "اسم الكلمات الرئيسية مطلوب", new { @class = "invalid-feedback" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="@Resources.Resources.Save" class="btn btn-primary" />
                                @Html.ActionLink(Resources.Resources.Back, "Index", null, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div> <!-- end col -->
</div>

@section scripts{
    <script src="~/assets/libs/parsleyjs/parsley.min.js"></script>

    <script src="~/assets/js/pages/form-validation.init.js"></script>

    <script src="~/assets/js/app.js"></script>
}
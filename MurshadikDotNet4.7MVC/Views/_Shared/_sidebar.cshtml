            <!-- Left Menu Start -->
            <ul class="metismenu list-unstyled" id="side-menu">
                @if (ViewData["menu"] != null)
                {
                    var currentUser = ViewBag.currentUser as MurshadikCP.Models.UserInfo;

                    foreach (MurshadikCP.Models.MenuModel pg in ViewData["menu"] as List<MurshadikCP.Models.MenuModel>)
                    {
                        if (currentUser.canView(pg.id))
                        {
                            <li>
                                @if (pg.has_childern)
                                {
                                    <a href="javascript: void(0);" class="has-arrow">
                                        <i class="@pg.icon"></i>
                                        <span>@pg.display_name</span>
                                    </a>
                                    <ul class="sub-menu" aria-expanded="true">
                                        @foreach (MurshadikCP.Models.MenuModel cp in pg.children as List<MurshadikCP.Models.MenuModel>)
                                        {
                                            <li>
                                                <a href="@Url.Action(cp.route, pg.route)">@cp.display_name</a>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <a href="@Url.Action("Index", pg.route)" class="waves-effect">
                                        <i class="@pg.icon"></i>
                                        <span>@pg.display_name</span>
                                    </a>
                                }
                            </li>
                        }

                    }
                }
                else
                {
                    if (Session["Menu"] != null)
                    {
                        foreach (MurshadikCP.Models.DB.roles_permission item in Session["Menu"] as List<MurshadikCP.Models.DB.roles_permission>)
                        {

                            <li>
                                @if (item.Page.Parent_page == null)
                                {
                                    if (item.Page.PageName_Ar == "المفكرة الزراعية")
                                    {
                                        <a href="@Url.Action("Index", item.Page.PageName)" class="waves-effect">
                                            <i class="@item.Page.Icon"></i>
                                            <span>@item.Page.PageName_Ar</span>
                                        </a>
                                    }
                                    else if (item.Page.PageName_Ar == "تقويم أخبار الزراعة")
                                    {
                                        <a href="@Url.Action("Index", item.Page.PageName)" class="waves-effect">
                                            <i class="@item.Page.Icon"></i>
                                            <span>@item.Page.PageName_Ar</span>
                                        </a>
                                    }
                                    else if (item.Page.PageName_Ar == "الإرشاد الزراعي")
                                    {
                                        <a href="@Url.Action("Index", item.Page.PageName)" class="waves-effect">
                                            <i class="@item.Page.Icon"></i>
                                            <span>@item.Page.PageName_Ar</span>
                                        </a>
                                    }
                                    else if (item.Page.PageName_Ar == "المنتجات الزراعية")
                                    {
                                        <a href="@Url.Action("Index", item.Page.PageName)" class="waves-effect">
                                            <i class="@item.Page.Icon"></i>
                                            <span>@item.Page.PageName_Ar</span>
                                        </a>
                                    }
                                    else if (item.Page.PageName_Ar == "المكتبة الرقمية")
                                    {
                                        <a href="@Url.Action("Index", item.Page.PageName)" class="waves-effect">
                                            <i class="@item.Page.Icon"></i>
                                            <span>@item.Page.PageName_Ar</span>
                                        </a>
                                    }
                                    else if (item.Page.PageName_Ar == "أسئلة وأجوبة إرشادية")
                                    {
                                        <a href="@Url.Action("Index", item.Page.PageName)" class="waves-effect">
                                            <i class="@item.Page.Icon"></i>
                                            <span>@item.Page.PageName_Ar</span>
                                        </a>
                                    }
                                    else if (item.Page.PageName_Ar == "التجارب الناجحة")
                                    {
                                        <a href="@Url.Action("Index", item.Page.PageName)" class="waves-effect">
                                            <i class="@item.Page.Icon"></i>
                                            <span>@item.Page.PageName_Ar</span>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Index", item.Page.PageName)" class="waves-effect">
                                            <i class="@item.Page.Icon"></i>
                                            <span>@item.Page.PageName_Ar</span>
                                        </a>
                                    }

                                }
                            </li>
                        }
                    }
                }


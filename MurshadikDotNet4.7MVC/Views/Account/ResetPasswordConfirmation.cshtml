@{
    ViewBag.Title = "Reset password confirmation";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}


<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card overflow-hidden">
                    <hgroup class="title">
                        <h1>@ViewBag.Title.</h1>
                    </hgroup>
                    <div>
                        <p>
                            Your password has been reset. 
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                            <a class="dropdown-item text-danger" href="javascript:document.getElementById('logoutForm').submit()"><i class="bx bx-power-off font-size-16 align-middle mr-1 text-danger"></i> click here to log in</a>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



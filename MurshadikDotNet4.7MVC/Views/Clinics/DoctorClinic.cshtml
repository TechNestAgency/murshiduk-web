@model MurshadikCP.Controllers.DoctorClinicsDto
@{
    ViewBag.Title = "اطباء العيادة";


    if (ViewBag.role == 1)
    {
        Layout = "~/Views/Shared/Layouts/_layout_horizontal.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

}

<div class="row">
    <div class="col-4">
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-body  ">
                <div class=" d-flex justify-content-center">
                    <div class="media">
                        <div class="avatar-md mr-4">
                            <span class="avatar-title rounded-circle bg-light text-danger font-size-16">
                                <img src="@Model.ClinicImg" alt="" class="card-img-top img-fluid" height="30">
                            </span>
                        </div>

                        <div class="media-body ">
                            <h5 class="font-size-15 pt-4"><a href="#" class="text-dark">@Model.ClinicName</a></h5>
                        </div>

                    </div>
                </div>
                <div class="p-2 d-flex justify-content-center">
                  @*  <a href="@Model.Id" class="btn btn-outline-primary btn-lg" data-toggle="tooltip" data-placement="top" title="تعديل"><i class="bx bx-pencil"></i></a>*@
                    <a href="" class="btn btn-outline-primary btn-lg" data-toggle="tooltip" data-placement="top" title="إضافة طبيب للعيادة"><i class="bx bx-user-plus"> اضافة طبيب للعيادة</i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-4">
    </div>

</div>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tr>
                            <th>
                                اسم الطبيب
                            </th>
                            <th>
                                ايام العمل العمل
                            </th>
                            <th>
                                ساعات العمل
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.clinicName)
                                </th>*@

                            <th></th>
                        </tr>

                        @foreach (var item in Model.Doctors)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WorkHouer)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WorkDays)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.clinicName)
                                    </td>*@

                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
